<DOCTYPE html>
<html lang="en" dir="ltr">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <head>
        <title>Porter Libby</title>
        <meta charset="utf-8">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/0.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel='stylesheet' href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" type="text/css" href="css/main.css" />
    </head>
    <body>
        <script>var content = <%= content %></script>
        <div id="header">
            <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-custom1">
                <div class="container">
                    <a class="navbar-brand" style="margin-right: 40px;" href="#">
                        <h2>Porter Libby</h2>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href='/?about'>
                                    About
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href='/?projects'>
                                    Projects
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href='/?blog'>
                                    Blog
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href='https://docs.google.com/document/d/1jc7Mi7Lw40W-zh7eJSHUv-NtldQ7mfW1217N2lDLDaA/edit?usp=sharing'>
                                    Resume
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div id="content_container">
            <% for (var x = 0; x < content.length; x++) { %>

                <!-- Card -->
                <div class="card text-white bg-custom2 mb-3 <% for (y=0;y<content[x].tags.length;y++){ %><%= content[x].tags[y] + " " %><% } %>">
                    <div class="row no-gutters">
                        <!-- Card image -->
                        <% if (content[x].img_url != "") { %>
                            <div class="col-md-4">
                                <div class="view overlay zoom">
                                    <img class="img-fluid card-img-top" src="<%= content[x].img_url %>" alt="Card image cap">
                                </div>
                            </div>
                        <% } %>

                        <!-- Card content -->
                        <div class="col-md-8">
                            <div class="card-body">
                                <!-- Title -->
                                <% if (content[x].title != "") { %>
                                    <h4 class="card-title"><a><%= content[x].title %></a></h4>
                                <% } %>
                                <!-- Badge -->
                                <div style='padding-top: 5px; padding-bottom: 15px;'>
                                    <% for(y = 0; y < content[x].badges.length; y++) {%>
                                        <img style="display:inline-block;" alt="<%=x%>-<%=y%>" src="<%=content[x].badges[y]%>" >
                                    <%}%>
                                </div>

                                <!-- Text -->
                                <% if (content[x].content != "") { %>
                                    <p class="card-text"><%= content[x].content %></p>
                                <% } %>
                                <% if (content[x].dates != "") { %>
                                    <p class="card-text"><small class="text-muted"> <%= content[x].dates %></small></p>
                                <% } %>

                                <!-- Button -->
                                <% for(y = 0; y < content[x].buttons.length; y++) {%>
                                    <a href="<%= content[x].buttons[y] %>" class="btn btn-outline-success">
                                        <% if (content[x].buttons[y].includes('github.com')) { %>
                                            Github
                                        <% }else if(content[x].buttons[y].includes('github.io') || content[x].buttons[y].includes('herokuapp')){ %>
                                            Live Demo
                                        <% } %>
                                    </a>
                                <% } %>
                                </br>
                                <!-- NAV -->
                                <% if (content[x].tags.includes('about')){ %>
                                    <div style='width: 100%;'>
                                        <ul class="social-icons">
                                            <li><a class="github" href="https://github.com/probably-not-porter'"><i class="fa fa-github"></i></a></li>
                                            <li><a class="instagram" href="https://www.instagram.com/probably_not_porter/?hl=en"><i class="fa fa-instagram"></i></a></li>
                                            <li><a class="linkedin" href="https://www.linkedin.com/in/porter-libby-41b292147/"><i class="fa fa-linkedin"></i></a></li>
                                            <li><a class="resume" href="https://docs.google.com/document/d/1jc7Mi7Lw40W-zh7eJSHUv-NtldQ7mfW1217N2lDLDaA/edit?usp=sharing"><i class="fa fa-file"></i></a></li>   
                                        </ul>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <!-- FOOTER     -->
        <div class="container" style='margin-top:10px;margin-bottom:50px;'>
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">
                    <p class="copyright-text">Copyright &copy; 2019 Porter Libby
                    </p>
                </div>

                <div class="col-md-4 col-sm-6 col-xs-12">
                    <ul class="social-icons">
                        <li><a class="github" href="https://github.com/probably-not-porter'"><i class="fa fa-github"></i></a></li>
                        <li><a class="instagram" href="https://www.instagram.com/probably_not_porter/?hl=en"><i class="fa fa-instagram"></i></a></li>
                        <li><a class="linkedin" href="https://www.linkedin.com/in/porter-libby-41b292147/"><i class="fa fa-linkedin"></i></a></li>
                        <li><a class="resume" href="https://docs.google.com/document/d/1jc7Mi7Lw40W-zh7eJSHUv-NtldQ7mfW1217N2lDLDaA/edit?usp=sharing"><i class="fa fa-file"></i></a></li>    
                    </ul>
                </div>
            </div>
        </div>
        <script>
            document.addEventListener("DOMContentLoaded", filter);
            function filter(){
                elem = document.getElementById('content_container');
                loc = document.location.href;
                filter = loc.split('?')[1];
                if (filter == undefined){
                    filter = 'about';
                }
                var c = elem.children; 
                console.log(filter);
                for (x=0;x<c.length;x++){
                    if (c[x].classList.contains(filter)){
                        c[x].style.display = 'block';
                    }else{
                        c[x].style.display = 'none';
                    }
                }
            }
        </script> 
    </body>
    
</html>
